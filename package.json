    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "happy-dom": "^20.4.0",
    "knip": "^5.42.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
